<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="#FFC26F"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvViewTitle"
            android:fontFamily="@font/plusjakartasans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvAmbienceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambience"
            android:fontFamily="@font/plusjakartasans"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvUtilsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utils"
            android:layout_marginEnd="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/plusjakartasans"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvOptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relaxing"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/plusjakartasans"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvOptionAmbience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cool"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvAmbienceTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/plusjakartasans"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvOptionUtils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi"
            android:fontFamily="@font/plusjakartasans"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUtilsTitle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSearchPref"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/plusjakartasans"
            android:text="Search"
            android:textSize="20sp"
            android:textColor="#F6F6F6"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/login_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOptionAmbience" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>